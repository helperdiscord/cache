{
    "compilerOptions": {                   
      "target": "es6",                         
      "module": "commonjs",                    
      "declaration": true,                     
      "outDir": "./dist",                      
      "removeComments": true,               
      "strict": true,                         
      "alwaysStrict": true,                  
      "noUnusedLocals": true,                
      "noUnusedParameters": true,           
      "esModuleInterop": true,                  
      "forceConsistentCasingInFileNames": true  
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }